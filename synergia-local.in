#!/bin/sh

llib="${CMAKE_CURRENT_BINARY_DIR}/src/synergia"
sslp="$llib:$llib/bunch:$llib/collective:$llib/foundation:$llib/lattice:$llib/simulation:$llib/utils"

local_dir="${SYNERGIA2_BINARY_DIR}"
SYNERGIA2DIR="$local_dir"
export SYNERGIA2DIR

this_synergia_python_path="$local_dir/src"
chef_dirs=`echo "${CHEF_LIBRARY_DIRS}" | sed 's/;/ /g'`
for dir in $chef_dirs $install_python_dir "$this_synergia_python_path"
do
    PYTHONPATH="$dir:$PYTHONPATH"
done
export PYTHONPATH

exec /bin/sh "${CMAKE_CURRENT_BINARY_DIR}/src/frontend/synergia" "$@"

if [ x"$1" = x"--ldlibrarypath" ]; then
	echo "$LD_LIBRARY_PATH"
	exit 0
fi

PYTHON_EXECUTABLE="${MY_PYTHON_EXECUTABLE}"
if [ x"$1" = x"--ipython" ]; then
	PYTHON_EXECUTABLE=ipython
	shift
fi

if [ x"$1" = x"-c" ]; then
	exec "$PYTHON_EXECUTABLE" "$@"
fi

just_options=false
options_file="`basename \"$1\" .py 2> /dev/null`_options.py"
if [ -f "$options_file" ]; then
	for arg in "$@"
	do
		if [ x"$arg" = x"--help" ]; then
			just_options=true
		fi
		if [ x"$arg" = x"createjob=1" ]; then
			just_options=true
		fi
	done
fi

arg1="$1"
shift
if [ "$just_options" = "true" ]; then
	exec "$PYTHON_EXECUTABLE" "$options_file" --strip-options-file "$arg1" "synergia_executable=$SYNERGIA2DIR/synergia-local" "$@"
else
	exec "$PYTHON_EXECUTABLE" "$arg1" "synergia_executable=$SYNERGIA2DIR/synergia-local" "$@"
fi
