#!/bin/sh

local_dir="`dirname $0`"
SYNERGIA2DIR="$local_dir"
export SYNERGIA2DIR
chef_dirs=`echo "${CHEF_LIBRARY_DIRS}" | sed 's/;/ /g'`
impact_dir="$local_dir/../impact/Forthon_Interfaces"
for dir in $local_dir $chef_dirs $impact_dir
do
    PYTHONPATH="$dir:$PYTHONPATH"
done
export PYTHONPATH
exec python "$@"
