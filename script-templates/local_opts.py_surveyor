#!/usr/bin/env python

from workflow import options
import os

opts = options.Options('local')
opts.add("mode", "vn", "batch mode (vn, dual, or smp)", str)
if os.environ.has_key('USER'):
    default_user = os.environ['USER']
else:
    default_user = 'unknownuser'
opts.add("email", default_user + '@fnal.gov', "email address", str)
